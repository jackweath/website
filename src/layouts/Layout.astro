---
import BaseHead from "../components/Common/BaseHead.astro";
import Footer from "../components/Common/Footer.astro";

import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="flex flex-col bg-gradient-to-br from-stone-200 to-stone-300 text-stone-800 dark:from-stone-800 dark:to-stone-700 dark:text-stone-200 min-h-screen"
  >
    <slot />
    <Footer />
  </body>
</html>
